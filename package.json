  "main": "build/main/server.js",
  "type": "module",
  "scripts": {
    "start": "ts-node-esm -r tsconfig-paths/register src/main/server.ts",
    "up": "docker-compose up -d",
    "build": "tsc -p ./tsconfig.build.json && tsc-alias -p ./tsconfig.build.json",
    "test:unit": "jest --silent --detectOpenHandles --config ./jest.unit.config.ts",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration": "node --experimental-vm-modules -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles --config ./jest.integration.config.json"
  },
  "dependencies": {
    "@redis/client": "^1.5.7",
    "dotenv": "^16.0.3",
